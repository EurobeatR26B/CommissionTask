{
    "name": "justas/commission-task-skeleton",
    "description": "Skeleton for Justas recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Justas\\CommissionTask\\FileInput\\": "src\\FileInput",
            "Justas\\CommissionTask\\Operation\\": "src\\Operation",
            "Justas\\CommissionTask\\User\\": "src\\User",
            "Justas\\CommissionTask\\CommissionCalculation\\": "src\\CommissionCalculation",
            "Justas\\CommissionTask\\CurrencyConversion\\": "src\\CurrencyConversion",
        },
    },
    "autoload-dev": {
        "psr-4": {
            "Justas\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "2.16"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
